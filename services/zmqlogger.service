[Unit]
Description=ZMQ Logger
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/dragon/WarDragon/DragonSync/utils
ExecStart=/usr/bin/python3 /home/dragon/WarDragon/DragonSync/utils/zmq_logger_for_kml.py --zmq-host 127.0.0.1 --min-log-interval 10 --zmq-port 4224 --include-system-location --zmq-status-port 4225
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target